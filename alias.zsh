# expand aliases before completing
setopt complete_aliases     # aliased ls needs if file/dir completions work

alias l='ls -l'
alias la='ls -al'
alias ld='ls -al |grep ^d'
alias lt='ls -lt'
alias lf="ls -F"

alias cl='clear'
alias tailf='tail -f'

alias untar='tar xvf'

alias vi='vim'
alias vimless='vim -R'
alias vless='vim -R'

